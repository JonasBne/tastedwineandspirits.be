---
import PrimaryActionLink from "../components/PrimaryActionLink.astro";
import { appRoutes } from "../config/url.const";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Bedankt voor je bericht!">
    <article class="px-6 mt-6">
        <p class="font-bold text-2xl mb-4 md:text-4xl">Bedankt!</p>
        <p class="font-light md:text-xl">
            We hebben je bericht goed ontvangen en contacteren je zo spoedig
            mogelijk.
        </p>
        <div class="block mt-6 sm:w-fit sm:mt-10">
        <PrimaryActionLink
            label="Terug naar het overzicht"
            linkTo={appRoutes.base}
        />
        </div>
    </article>
</Layout>